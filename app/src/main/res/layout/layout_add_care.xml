<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">


    <RelativeLayout
        android:id="@+id/izd_rlDirectCardGuanZhu"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_centerVertical="true"
        android:background="@drawable/izd_zdcard_care_bg">

        <ImageView
            android:id="@+id/izd_iv_care_add"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:background="@drawable/izd_zdcard_care_add"
            />

        <TextView
            android:id="@+id/izd_tv_care_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="关注"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/izd_iv_care_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</RelativeLayout>