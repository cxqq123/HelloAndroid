<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rl_containter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rdg_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <RadioButton
            android:id="@+id/rb_videos"
            style="@style/rb_style"
            android:checked="true"
            android:drawableTop="@drawable/icx_navi_channel_selector"
            android:text="频道" />

        <RadioButton
            android:id="@+id/rb_novel"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_navi_sub_selector"
            android:text="订阅" />

        <RadioButton
            android:id="@+id/rb_cartoon"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_new_navi_discover_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_navi_profile_selector"
            android:text="我" />
    </RadioGroup>
</LinearLayout>
